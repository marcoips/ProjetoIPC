<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProjetoIPC.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ProjetoIPC"
    xmlns:views="clr-namespace:ProjetoIPC.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="ProjetoIPC">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
    Title="Driver Application"
    ContentTemplate="{DataTemplate views:DriverApplicationPage}"
    Route="DriverApplicationPage" />

    <ShellContent
    Title="Atividade"
    ContentTemplate="{DataTemplate views:Atividade}"
    Route="Atividade" />

    <ShellContent
    Title="Confirmation"
    ContentTemplate="{DataTemplate views:Confirmation}"
    Route="Confirmation" />

    <ShellContent
    Title="DriveInfo"
    ContentTemplate="{DataTemplate views:DriveInfo}"
    Route="DriveInfo" />

    <ShellContent
    Title="LatestDrives"
    ContentTemplate="{DataTemplate views:LatestDrives}"
    Route="LatestDrives" />

</Shell>
