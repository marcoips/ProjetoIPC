<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetoIPC.Views.DriveInfo"
             Title="Drive Info"
             BackgroundColor="Transparent">

    <Grid>
        <!-- Imagem de fundo -->
        <Image Source="logonoback.png"
               Aspect="AspectFill"
               Opacity="0.2"
               HorizontalOptions="Fill"
               VerticalOptions="Fill" />

        <!-- Conteúdo sobre a imagem -->
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="20">
                <Label Text="Viagens Aceites"
                       FontSize="24"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />

                <!-- Lista dinâmica de viagens aceites -->
                <VerticalStackLayout x:Name="TripsStack" Spacing="15" />

                <!-- Barra de Navegação Inferior -->
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Margin="10">
                    <Button Text="home"
                            BackgroundColor="Orange"
                            WidthRequest="100"
                            Margin="5"
                            Clicked="HomeClicked"
                            AutomationProperties.Name="Início"
                            AutomationProperties.HelpText="Vai para a página inicial" />
                    <Button Text="activity"
                            BackgroundColor="Orange"
                            WidthRequest="100"
                            Margin="5"
                            Clicked="ActivityClicked"
                            AutomationProperties.Name="Atividade"
                            AutomationProperties.HelpText="Mostra as atividades" />
                    <Button Text="profile"
                            BackgroundColor="Orange"
                            WidthRequest="100"
                            Margin="5"
                            Clicked="ProfileClicked"
                            AutomationProperties.Name="Perfil"
                            AutomationProperties.HelpText="Vai para o perfil do utilizador" />
                </StackLayout>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
