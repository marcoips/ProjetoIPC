<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetoIPC.Views.Profile"
             Title="Profile">

    <StackLayout Padding="20" Spacing="20">

        <!-- Cabeçalho com título e logotipo -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Label Text="Profile"
                   FontSize="24"
                   VerticalOptions="Center"
                   Grid.Column="0" />

            <Image Source="logo.png"
                   HeightRequest="40"
                   VerticalOptions="Center"
                   Grid.Column="1" />
        </Grid>

        <!-- Botão para ser condutor -->
        <Button x:Name="ApplyButton"
                Text="apply to be a driver"
                BackgroundColor="Orange"
                TextColor="White"
                CornerRadius="10"
                HeightRequest="45" 
                Clicked="OnApplyButtonClicked"/>

        <!-- Campos do formulário -->
        <StackLayout Spacing="10">
            <Entry Placeholder="Email" x:Name="EmailEntry" />
            <Entry Placeholder="Name" x:Name="NameEntry" />
            <Entry Placeholder="Birthday" x:Name="BirthdayEntry" />
            <Entry Placeholder="Phone" x:Name="PhoneEntry" />
            <Entry Placeholder="Address" x:Name="AddressEntry" />
            <Entry Placeholder="Country" x:Name="CountryEntry" />
            <Entry Placeholder="City" x:Name="CityEntry" />

            <Picker Title="Condition" x:Name="ConditionPicker">
                <Picker.Items>
                    <x:String>Cego</x:String>
                    <x:String>Surdo</x:String>
                    <x:String>Mudo</x:String>
                </Picker.Items>
            </Picker>
        </StackLayout>



        <!-- Barra de navegação inferior corrigida -->
        <Grid ColumnSpacing="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Text="Home"
                    BackgroundColor="Orange"
                    TextColor="White"
                    Grid.Column="0" 
                    Clicked="HomeClicked"/>

            <Button Text="Activity"
                    BackgroundColor="Orange"
                    TextColor="White"
                    Grid.Column="1" 
                    Clicked="ActivityClicked"/>

            <Button Text="Profile"
                    BackgroundColor="Orange"
                    TextColor="White"
                    Grid.Column="2" />
        </Grid>

    </StackLayout>
</ContentPage>
