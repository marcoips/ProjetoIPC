<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetoIPC.Views.Profile"
             Title="Profile">

    <StackLayout Padding="20" Spacing="20">

        <!-- Cabeçalho com título e logotipo -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Label Text="Profile"
                   FontSize="24"
                   VerticalOptions="Center"
                   Grid.Column="0" />

            <Image Source="logo.png"
                   HeightRequest="40"
                   VerticalOptions="Center"
                   Grid.Column="1" />
        </Grid>

        <!-- Botão para ser condutor -->
        <Button x:Name="ApplyButton"
                Text="apply to be a driver"
                BackgroundColor="Orange"
                TextColor="White"
                CornerRadius="10"
                HeightRequest="45" 
                Clicked="OnApplyButtonClicked"
                AutomationProperties.Name="Candidatar-se a condutor"
                AutomationProperties.HelpText="Clique para se candidatar a condutor" />

        <!-- Campos do formulário -->
        <StackLayout Spacing="10">
            <Entry Placeholder="Email" x:Name="EmailEntry"
                   AutomationProperties.Name="Email"
                   AutomationProperties.HelpText="Campo para inserir o email" />
            <Entry Placeholder="Name" x:Name="NameEntry"
                   AutomationProperties.Name="Nome"
                   AutomationProperties.HelpText="Campo para inserir o nome" />
            <Entry Placeholder="Birthday" x:Name="BirthdayEntry"
                   AutomationProperties.Name="Data de nascimento"
                   AutomationProperties.HelpText="Campo para inserir a data de nascimento" />
            <Entry Placeholder="Phone" x:Name="PhoneEntry"
                   AutomationProperties.Name="Telefone"
                   AutomationProperties.HelpText="Campo para inserir o número de telefone" />
            <Entry Placeholder="Address" x:Name="AddressEntry"
                   AutomationProperties.Name="Morada"
                   AutomationProperties.HelpText="Campo para inserir a morada" />
            <Entry Placeholder="Country" x:Name="CountryEntry"
                   AutomationProperties.Name="País"
                   AutomationProperties.HelpText="Campo para inserir o país" />
            <Entry Placeholder="City" x:Name="CityEntry"
                   AutomationProperties.Name="Cidade"
                   AutomationProperties.HelpText="Campo para inserir a cidade" />

            <Picker Title="Condition" x:Name="ConditionPicker"
                    AutomationProperties.Name="Condição"
                    AutomationProperties.HelpText="Selecione uma condição: cego, surdo ou mudo">
                <Picker.Items>
                    <x:String>Cego</x:String>
                    <x:String>Surdo</x:String>
                    <x:String>Mudo</x:String>
                </Picker.Items>
            </Picker>
        </StackLayout>

        <!-- Barra de navegação inferior corrigida -->
        <Grid ColumnSpacing="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Text="Home"
                    BackgroundColor="Orange"
                    TextColor="White"
                    Grid.Column="0" 
                    Clicked="HomeClicked"
                    AutomationProperties.Name="Início"
                    AutomationProperties.HelpText="Vai para a página inicial" />

            <Button Text="Activity"
                    BackgroundColor="Orange"
                    TextColor="White"
                    Grid.Column="1" 
                    Clicked="ActivityClicked"
                    AutomationProperties.Name="Atividade"
                    AutomationProperties.HelpText="Mostra as atividades" />

            <Button Text="Profile"
                    BackgroundColor="Orange"
                    TextColor="White"
                    Grid.Column="2"
                    AutomationProperties.Name="Perfil"
                    AutomationProperties.HelpText="Está na página de perfil" />
        </Grid>

    </StackLayout>
</ContentPage>
