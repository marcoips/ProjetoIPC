<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetoIPC.Views.LatestDrives"
             Title="LatestDrives">

    <Grid>
        <!-- Fundo: Imagem -->
        <Image Source="logonoback.png"
               Aspect="AspectFill"
               Opacity="0.2"  
               HorizontalOptions="Fill"
               VerticalOptions="Fill" />

        <StackLayout Padding="10">
            <!-- Top section with logo e texto -->
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Label Text="Home" FontSize="24" VerticalOptions="Center"/>
            </StackLayout>

            <!-- Heading -->
            <Label Text="Latest drives" FontSize="20" HorizontalOptions="Center" Margin="10"/>

            <!-- List of drives -->
            <StackLayout x:Name="DrivesStack" />

            <!-- Bottom navigation buttons -->
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Margin="10">
                <Button Text="home" BackgroundColor="Orange" WidthRequest="100" Margin="5" Clicked="HomeClicked"/>
                <Button Text="activity" BackgroundColor="Orange" WidthRequest="100" Margin="5" Clicked="ActivityClicked"/>
                <Button Text="profile" BackgroundColor="Orange" WidthRequest="100" Margin="5" Clicked="ProfileClicked"/>
            </StackLayout>
        </StackLayout>
    </Grid>
</ContentPage>
