<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetoIPC.Views.DriverApplicationPage"
             BackgroundColor="White"
             Title="Driver Application">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20" HorizontalOptions="Center">

            <!-- Top bar -->
            <Grid ColumnDefinitions="Auto,*,Auto">
                <ImageButton Source="back_arrow.png"
                             WidthRequest="30"
                             HeightRequest="30"/>
                <Label Text=""
                       Grid.Column="1"/>
                <Image Source="logo.png"
                       HeightRequest="100"
                       WidthRequest="100"
                       Grid.Column="2"
                       HorizontalOptions="End"/>
            </Grid>

            <!-- Title -->
            <Label Text="Driver Application"
                   FontSize="24"
                   HorizontalOptions="Center"
                   FontAttributes="Bold"/>

            <!-- Upload sections -->
            <VerticalStackLayout Spacing="20">
                <Grid ColumnDefinitions="*,Auto">
                    <Label Text="Driver License"
                           BackgroundColor="Orange"
                           Padding="10"
                           FontSize="14"
                           VerticalTextAlignment="Center"
                           HeightRequest="40"
                           HorizontalOptions="Fill"
                           Margin="10"/>

                    <Button Text="Upload"
                            BackgroundColor="LightGray"
                            Grid.Column="1"
                            HeightRequest="40"
                            WidthRequest="100"/>
                </Grid>

                <Grid ColumnDefinitions="*,Auto">
                    <Label Text="Identity Card"
                           BackgroundColor="Orange"
                           Padding="10"
                           FontSize="14"
                           VerticalTextAlignment="Center"
                           HeightRequest="40"
                           HorizontalOptions="Fill"
                           Margin="10"/>

                    <Button Text="Upload"
                            BackgroundColor="LightGray"
                            Grid.Column="1"
                            HeightRequest="40"
                            WidthRequest="100"/>
                </Grid>

                <Grid ColumnDefinitions="*,Auto">
                    <Label Text="Vehicle Documents"
                           BackgroundColor="Orange"
                           Padding="10"
                           FontSize="14"
                           VerticalTextAlignment="Center"
                           HeightRequest="40"
                           HorizontalOptions="Fill"
                           Margin="10"/>

                    <Button Text="Upload"
                            BackgroundColor="LightGray"
                            Grid.Column="1"
                            HeightRequest="40"
                            WidthRequest="100"/>
                </Grid>
            </VerticalStackLayout>

            <!-- Submit button -->
            <Button Text="Submit Application"
                    BackgroundColor="Gray"
                    TextColor="White"
                    CornerRadius="20"
                    HeightRequest="45"
                    WidthRequest="200"
                    HorizontalOptions="Center"
                    Margin="0,30,0,0"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
