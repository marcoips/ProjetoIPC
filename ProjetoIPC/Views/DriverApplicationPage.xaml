<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetoIPC.Views.DriverApplicationPage"
             BackgroundColor="White"
             Title="Driver Application">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20" HorizontalOptions="Center">

            <!-- Top bar -->
            <Grid ColumnDefinitions="Auto,*,Auto">
                <ImageButton Source="back_arrow.png"
                             WidthRequest="30"
                             HeightRequest="30"/>
                <Label Text=""
                       Grid.Column="1"/>
                <Image Source="logo.png"
                       HeightRequest="100"
                       WidthRequest="100"
                       Grid.Column="2"
                       HorizontalOptions="End"/>
            </Grid>

            <!-- Title -->
            <Label Text="Driver Application"
                   FontSize="24"
                   HorizontalOptions="Center"
                   FontAttributes="Bold"/>

            <!-- Upload sections -->
            <Grid ColumnDefinitions="*,Auto" RowSpacing="20">

                <Label Text="Driver License"
                       BackgroundColor="Orange"
                       Padding="10"
                       FontSize="14"
                       VerticalTextAlignment="Center"
                       HeightRequest="40"
                       HorizontalOptions="Fill"
                       />

                <Button Text="Upload"
                        BackgroundColor="LightGray"
                        Grid.Column="1"
                        HeightRequest="40"
                        WidthRequest="100"/>

                <Label Text="Identity Card"
                       BackgroundColor="Orange"
                       Padding="10"
                       FontSize="14"
                       VerticalTextAlignment="Center"
                       HeightRequest="40"
                       Grid.Row="1"
                       HorizontalOptions="Fill"/>

                <Button Text="Upload"
                        BackgroundColor="LightGray"
                        Grid.Column="1"
                        Grid.Row="1"
                        HeightRequest="40"
                        WidthRequest="100"/>

                <Label Text="Vehicle Documents"
                       BackgroundColor="Orange"
                       Padding="10"
                       FontSize="14"
                       VerticalTextAlignment="Center"
                       HeightRequest="40"
                       Grid.Row="2"
                       HorizontalOptions="Fill"/>

                <Button Text="Upload"
                        BackgroundColor="LightGray"
                        Grid.Column="1"
                        Grid.Row="2"
                        HeightRequest="40"
                        WidthRequest="100"/>
            </Grid>

            <!-- Submit button -->
            <Button Text="Submit Application"
                    BackgroundColor="Gray"
                    TextColor="White"
                    CornerRadius="20"
                    HeightRequest="45"
                    WidthRequest="200"
                    HorizontalOptions="Center"
                    Margin="0,30,0,0"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
