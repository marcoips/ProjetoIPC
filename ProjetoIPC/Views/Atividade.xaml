<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetoIPC.Views.Atividade"
             Title="Atividade"
             BackgroundColor="Transparent">

    <Grid>
        <!-- Imagem de fundo -->
        <Image Source="logonoback.png"
               Aspect="AspectFill"
               Opacity="0.2"
               HorizontalOptions="Fill"
               VerticalOptions="Fill" />

        <!-- Conteúdo sobre a imagem -->
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="20">
                <!-- Título e logotipo -->
                <HorizontalStackLayout HorizontalOptions="CenterAndExpand">
                    <Label Text="Activity"
                           FontSize="24"
                           FontAttributes="Bold"
                           HorizontalOptions="Center" />
                </HorizontalStackLayout>

                <!-- Lista dinâmica de Drives -->
                <VerticalStackLayout x:Name="DrivesStack" Spacing="15" />

                <!-- Barra de Navegação Inferior -->
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Margin="10">
                    <Button Text="home" BackgroundColor="Orange" WidthRequest="100" Margin="5" Clicked="HomeClicked"/>
                    <Button Text="activity" BackgroundColor="Orange" WidthRequest="100" Margin="5" Clicked="ActivityClicked"/>
                    <Button Text="profile" BackgroundColor="Orange" WidthRequest="100" Margin="5" Clicked="ProfileClicked"/>
                </StackLayout>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
