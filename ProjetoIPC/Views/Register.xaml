<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetoIPC.Views.Register"
             Title="Register">

    <ContentPage.Content>
        <StackLayout Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Text="&#x2190;" Grid.Row="0" Grid.Column="0" HorizontalOptions="Start" Clicked="OnBackButtonClicked"/>
                <Label Text="Register" Grid.Row="0" Grid.Column="1" HorizontalOptions="Center"/>
                <Image Source="logo.png" Grid.Row="0" Grid.Column="2" HorizontalOptions="End" WidthRequest="40" HeightRequest="40"/>

                <StackLayout Grid.Row="1" Grid.ColumnSpan="3" Spacing="10">
                    <Entry Placeholder="Login" x:Name="UsernameEntry"/>
                    <Entry Placeholder="Password" x:Name="PasswordEntry" IsPassword="True"/>
                    <Entry Placeholder="Email" x:Name="EmailEntry"/>
                    <Entry Placeholder="Name" x:Name="NameEntry"/>
                    <DatePicker x:Name="DOBPicker"/>
                    <Entry Placeholder="Phone" x:Name="PhoneEntry"/>
                    <Entry Placeholder="Address" x:Name="AddressEntry"/>
                    <Entry Placeholder="Country" x:Name="CountryEntry"/>
                    <Entry Placeholder="City" x:Name="CityEntry"/>
                    <Button Text="Submit" BackgroundColor="Orange" TextColor="White" Clicked="SubmitClick"/>
                </StackLayout>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
